<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Location">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="지역을 선택하세요"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TableRow
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/seoul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/busan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부산"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/gyeongnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경남"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/gyeongbuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경북"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/jeonnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전남"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/jeonbuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전북"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/chungnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="충남"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/chungbuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="충북"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/gangwon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강원"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/sejong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세종"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/ulsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="울산"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/daejeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대전"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/gwangju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광주"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/incheon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인천"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/daegu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대구"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/jeju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제주"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/gyeonggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4"/>

    </TableRow>

</TableLayout>